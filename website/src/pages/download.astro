---
import "../styles/styles.css";

import BaseLayout from "../BaseLayout.astro";
---

<BaseLayout
  title="Download - R6 No Recoil"
  description="Download the latest release or development build of R6 No Recoil."
  url="https://r6norecoil.com/download"
>
  <style>
    .download-buttons {
      display: flex;
      flex-direction: column;
      align-items: center;
      gap: 0.5rem;
    }

    .download-buttons .btn {
      width: 260px;
    }

    .download-label {
      color: #e0e0e0;
      font-size: 0.98rem;
      margin-bottom: 1rem;
    }

    .download-label:last-of-type {
      margin-bottom: 0;
    }
  </style>

  <body>
    <!-- Hero Section -->
    <section class="hero">
      <div class="parallax-bg"></div>
      <div class="overlay-gradient"></div>
      <div class="hero-content">
        <div>
          <h1>Downloads</h1>

          <div class="buttons">
            <div class="download-buttons">
              <a
                target="_blank"
                class="btn primary"
                href="https://github.com/Harry-Hopkinson/R6-No-Recoil/releases/latest/download/R6NoRecoil.zip"
              >
                ðŸš€ Release Build
              </a>
              <span class="download-label">
                Stable, recommended for most users.
              </span>
              <a
                href="https://nightly.link/Harry-Hopkinson/R6-No-Recoil/workflows/CI/main/R6NoRecoil.zip"
                target="_blank"
                class="btn secondary"
              >
                ðŸ§ª Development Build
              </a>
              <span class="download-label">
                Latest features & fixes. May be unstable.
              </span>
            </div>
          </div>

          <!-- Social Buttons -->
          <div class="social-buttons">
            <a href="/" class="icon-btn github-btn" aria-label="Home">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="28"
                height="28"
                fill="white"
                viewBox="0 0 24 24"
              >
                <title>Home</title>
                <path
                  d="M12 3l9 9-1.5 1.5L19 20a1 1 0 0 1-1 1h-4v-5h-4v5H6a1 1 0 0 1-1-1v-6.5L3 12l9-9z"
                ></path>
              </svg>
            </a>
            <a
              href="https://github.com/Harry-Hopkinson/R6-No-Recoil"
              target="_blank"
              class="icon-btn github-btn"
              aria-label="View source on GitHub"
            >
              <svg
                xmlns="http://www.w3.org/2000/svg"
                role="img"
                viewBox="0 0 24 24"
                fill="white"
                width="24"
                height="24"
                aria-label="GitHub icon"
              >
                <title>GitHub</title>
                <path
                  d="M12 .297c-6.63 0-12 5.373-12 12 0 5.303
                   3.438 9.8 8.205 11.385.6.113.82-.258.82-.577
                   0-.285-.01-1.04-.015-2.04-3.338.724-4.042-1.61-4.042-1.61
                   -.546-1.387-1.333-1.757-1.333-1.757-1.09-.745.084-.729.084-.729
                   1.205.084 1.84 1.236 1.84 1.236 1.07 1.835 2.809 1.305
                   3.495.998.108-.776.418-1.305.762-1.605-2.665-.3-5.467-1.334-5.467-5.93
                   0-1.31.47-2.38 1.236-3.22-.135-.303-.54-1.523.105-3.176
                   0 0 1.005-.322 3.3 1.23a11.52 11.52 0 0 1 3-.405c1.02.005
                   2.045.138 3 .405 2.28-1.552 3.285-1.23 3.285-1.23.645 1.653.24
                   2.873.12 3.176.765.84 1.23 1.91 1.23 3.22
                   0 4.61-2.805 5.625-5.475 5.92.42.36.81 1.096.81
