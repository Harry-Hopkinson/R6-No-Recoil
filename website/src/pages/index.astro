      </div>
    </div>

    <script>
      let scrollY = 0;
      const parallax = document.querySelector(".parallax-bg") as HTMLElement;

      const handleScroll = () => {
        scrollY = window.scrollY;
        if (parallax) {
          parallax.style.transform = "translateY(" + scrollY * 0.5 + "px)";
        }
      };

      const scrollToInfo = (e: { preventDefault: () => void }) => {
        e.preventDefault();
        const el = document.getElementById("info");
        if (el) {
          el.scrollIntoView({ behavior: "smooth" });
        }
      };

      window.addEventListener("scroll", handleScroll);

      window.addEventListener("DOMContentLoaded", () => {
        document.querySelectorAll("[data-scroll-to-info]").forEach((el) => {
          el.addEventListener("click", scrollToInfo);
        });
      });
    </script>
  </body>
</html>
