    <!-- Scripts -->
    <script>
      const parallax: HTMLElement | null =
        document.querySelector(".parallax-bg");

      const handleScroll = () => {
        const scrollY = window.scrollY;
        if (parallax)
          parallax.style.transform = "translateY(" + scrollY * 0.5 + "px)";
      };
      window.addEventListener("scroll", handleScroll);

      const version: string = "2.2";
      const exePath: string =
        "https://github.com/Harry-Hopkinson/R6-No-Recoil/releases/download/" +
        version +
        "/r6-no-recoil.zip";
      document.addEventListener("DOMContentLoaded", () => {
        const downloadBtn: HTMLElement | any =
          document.getElementById("download-btn");
        if (downloadBtn) downloadBtn.href = exePath;
      });
    </script>
